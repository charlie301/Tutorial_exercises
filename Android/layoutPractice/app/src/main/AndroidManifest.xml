<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.charlie.layoutpractice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainLayout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".linearLayout"
            android:label="@string/title_activity_linear_layout"
            android:parentActivityName=".MainLayout"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.charlie.layoutpractice.MainLayout" />
        </activity>
        <activity
            android:name=".recorder"
            android:label="@string/title_activity_recorder"
            android:parentActivityName=".MainLayout"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.charlie.layoutpractice.MainLayout" />
        </activity>
        <activity android:name=".Grid_layout" />
        <activity android:name=".complete_practice"></activity>
    </application>

</manifest>